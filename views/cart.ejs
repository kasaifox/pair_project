
    <%- include('./partials/head.ejs') %>
    <h3><%= data.getUserName() %> </h3>
        <main>
            <a href="/pay">Pay</a>
            <table>
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>Nama Product</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>No. Transaksi</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <%data.Products.forEach((e, i)=>{%>
                        <tr>
                            <td><%=i + 1%></td>
                            <td><%= e.name %></td>
                            <td><%= formatPrice(e.price)%></td>
                            <td><%= e.Cart.quantity%></td>
                            <td><%= formatPrice(e.Cart.quantity * e.price)%></td>
                            <td><%= e.Cart.id%></td>
                            <td><%= e.Cart.status%></td>
                            <td>
                                <a href="/cancel/<%=e.id%>"" id="cancel">cancel</a>
                                <a href="/pay/<%=e.id%>" id="pay">Pay</a>
                                <a href="/cart/edit/<%=e.id%>" id="edit">edit</a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </main>
</body>

</html>